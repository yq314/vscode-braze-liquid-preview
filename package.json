{
    "name": "braze-liquid-preview",
    "displayName": "Braze Liquid Preview",
    "description": "Live preview for Braze Liquid templates",
    "version": "0.1.0",
    "publisher": "chinyip",
    "engines": {
        "vscode": "^1.23.0"
    },
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/yq314/vscode-braze-liquid-preview"
    },
    "galleryBanner": {
        "color": "#0F6378",
        "theme": "dark"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Braze",
        "Liquid",
        "Template",
        "Live Preview"
    ],
    "activationEvents": [
        "onCommand:brazeLiquidPreview.preview"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "liquid",
                "extensions": [
                    ".liquid"
                ]
            }
        ],
        "commands": [
            {
                "command": "brazeLiquidPreview.preview",
                "title": "Braze Liquid: Open Preview to the Side"
            }
        ],
        "keybindings": [
            {
                "command": "brazeLiquidPreview.preview",
                "key": "ctrl+k v",
                "when": "editorLangId == liquid"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "copyfiles test/examples/*.* out/ && tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^6.0.40",
        "copyfiles": "^1.2.0",
        "mocha": "^6.1.4",
        "typescript": "^2.0.3",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "brazejs": "^1.0.3"
    }
}
